<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/complete"
    tools:context=".view.GameScreen">


    <ImageView
        android:id="@+id/bgimg"
        android:layout_width="318dp"
        android:layout_height="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237"
        app:srcCompat="@drawable/bg_castlegate" />

    <Button
        android:id="@+id/btnchoice04"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="btn4"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/btnchoice02"
        app:layout_constraintStart_toStartOf="@+id/btnchoice02"
        app:layout_constraintTop_toBottomOf="@+id/btnchoice02" />

    <Button
        android:id="@+id/btnchoice01"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="btn1"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.802" />

    <Button
        android:id="@+id/btnchoice03"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="btn3"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/btnchoice01"
        app:layout_constraintStart_toStartOf="@+id/btnchoice01"
        app:layout_constraintTop_toBottomOf="@+id/btnchoice01" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="viewHeroStats"
        android:text="Stats"
        app:layout_constraintEnd_toEndOf="@+id/btnchoice03"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnchoice03"
        app:layout_constraintTop_toBottomOf="@+id/btnchoice03" />

    <Button
        android:id="@+id/btnchoice02"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="btn2"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/btnchoice01"
        app:layout_constraintTop_toTopOf="@+id/btnchoice01" />

    <TextView
        android:id="@+id/heroHPDisplay"
        android:layout_width="56dp"
        android:layout_height="14dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:text="Health:"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047"
        tools:visibility="invisible" />


    <TextView
        android:id="@+id/healthDisplay"
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:text="TextView"

        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/heroHPDisplay"
        app:layout_constraintStart_toEndOf="@+id/heroHPDisplay"
        app:layout_constraintTop_toTopOf="@+id/heroHPDisplay"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/weaponDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:text="Weapon:"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/heroHPDisplay"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/heroHPDisplay"
        app:layout_constraintTop_toBottomOf="@+id/heroHPDisplay"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/weapondisplayName"
        android:layout_width="101dp"
        android:layout_height="16dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:text="NaN"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/weaponDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toEndOf="@+id/weaponDisplay"
        app:layout_constraintTop_toTopOf="@+id/weaponDisplay"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/itemqty1"
        android:layout_width="58dp"
        android:layout_height="29dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/itemqty2"
        android:layout_width="47dp"
        android:layout_height="28dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:gravity="center"
        android:text="NaN"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ProgressBar
        android:id="@+id/hpBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="97dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:max="100"
        android:min="0"
        app:layout_constraintEnd_toEndOf="@+id/healthDisplay"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/healthDisplay"
        app:layout_constraintTop_toTopOf="@+id/healthDisplay" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="41dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.703"
        app:srcCompat="@drawable/ui_itemslut" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="45dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ui_itemslut" />

    <ImageButton
        android:id="@+id/itembtn1"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:background="#0000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/itemqty1"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/hpbottle"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/itembtn"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:background="#0000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/itemqty2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/weapon_sticksmall"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/storyText"
        android:layout_width="304dp"
        android:layout_height="62dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:shadowColor="@color/black"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bgimg"
        app:layout_constraintVertical_bias="0.503" />


</androidx.constraintlayout.widget.ConstraintLayout>