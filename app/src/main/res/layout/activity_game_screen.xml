<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GameScreen">


    <ImageView
        android:id="@+id/bgimg"
        android:layout_width="382dp"
        android:layout_height="517dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_castlegate" />

    <ImageView
        android:id="@+id/userinterface"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/complete" />

    <Button
        android:id="@+id/btnchoice01"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginBottom="160dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="btn1"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnchoice02"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="btn2"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/btnchoice01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/btnchoice01"
        app:layout_constraintTop_toTopOf="@+id/btnchoice01"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnchoice03"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginBottom="112dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="btn3"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnchoice04"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="btn4"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/btnchoice03"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/btnchoice03"
        app:layout_constraintTop_toTopOf="@+id/btnchoice03"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/heroHPDisplay"
        android:layout_width="56dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="700dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:text="Health:"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/healthDisplay"
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:text="TextView"
        android:textColor="#FFFFFF"

        app:layout_constraintBottom_toBottomOf="@+id/heroHPDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toEndOf="@+id/heroHPDisplay"
        app:layout_constraintTop_toTopOf="@+id/heroHPDisplay"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/weaponDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/perfect_dosvga437"
        android:text="Weapon:"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.278"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/weapondisplayName"
        android:layout_width="107dp"
        android:layout_height="33dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:text="NaN"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/weaponDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/weaponDisplay"
        app:layout_constraintTop_toTopOf="@+id/weaponDisplay"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:onClick="viewHeroStats"
        android:text="Stats"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/itembtn1"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginBottom="250dp"
        android:background="#0000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hpbottle" />

    <TextView
        android:id="@+id/itemqty1"
        android:layout_width="44dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/itembtn1"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/itembtn1"
        app:layout_constraintTop_toBottomOf="@+id/itembtn1" />

    <TextView
        android:id="@+id/itemqty2"
        android:layout_width="44dp"
        android:layout_height="37dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:gravity="center"
        android:text="NaN"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/itemqty1"
        app:layout_constraintEnd_toEndOf="@+id/itembtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/itembtn"
        app:layout_constraintTop_toTopOf="@+id/itemqty1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/storyText"
        android:layout_width="335dp"
        android:layout_height="95dp"
        android:layout_marginTop="420dp"
        android:fontFamily="@font/perfect_dosvga437"
        android:shadowColor="@color/black"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/itembtn"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="#0000"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/itembtn1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toEndOf="@+id/itembtn1"
        app:layout_constraintTop_toTopOf="@+id/itembtn1"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/weapon_sticksmall" />

    <ProgressBar
        android:id="@+id/hpBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="97dp"
        android:layout_height="19dp"
        android:layout_marginStart="24dp"
        android:max="100"
        android:min="0"
        app:layout_constraintBottom_toBottomOf="@+id/heroHPDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/heroHPDisplay"
        app:layout_constraintTop_toTopOf="@+id/heroHPDisplay"
        app:layout_constraintVertical_bias="0.0" />



</androidx.constraintlayout.widget.ConstraintLayout>